<html lang="en">

	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">

		<title>Movie Time</title>

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

	</head>

	<body>
		<center>
			<video src="" height="360px" controls ></video>
		</center>

		<input type="text" name="magnet" placeholder="Enter torrent URL. ">

		<p id="stream">Stream</p>
		<p id="stop">Stop</p>
	</body>

	<script>
	$(function() {

		var api = "{{base_url}}/video/";

		$("video").on("error", function() {

		     var magnet = $('input').val();

			$.get(api + 'delete/' + magnet, function(data) {

				$('input').val('');

			});
		});

		$('#stream').click(function() {

			var magnet = $('input').val();

			$.get(api + 'add/' + magnet, function(data) {

				var video = api + 'stream/' + magnet;

				$('video').attr('src', video);

			});
		});

		$('#stop').click(function() {

			$('video').attr('src', '');
			$('video')[0].load();


		});

	});
	</script>

</html>